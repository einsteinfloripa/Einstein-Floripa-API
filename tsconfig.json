{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": "src",
    "target": "ES2016",
    "baseUrl": ".",
    "paths": {
      "@db": ["src/db/index"],
      "@routers": ["src/routers/index"],
      "@middlewares": ["src/middlewares/index"],
      "@controllers": ["src/controllers/index"],
      "@services": ["src/services/index"],
      "@utils": ["src/utils/index"],
      "@schemas": ["src/models/index"],
      "@repositories": ["src/repositories/index"]
    }
  },
  "exclude": ["node_modules", "prisma", "build", "tests", "vite.config.ts"],
  "ts-node": {
    "esm": true
  }
}
